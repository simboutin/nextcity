<!-- Title & Buttons -->
<section class="py-4" style="background-color: #F2F2F2; margin-top: 3.6rem;">
  <div class="container d-flex justify-content-between">
    <h1>3 villes sélectionnées pour vous</h1>
    <div class="d-flex">
      <button id="search-resume-btn" class="round-btn mr-2">
        <i class="fas fa-user"></i>
      </button>
      <%= link_to refresh_search_path(@search), method: :patch, remote: true do %>
        <button id="refresh-btn" class="round-btn mr-2">
          <i class="fas fa-sync-alt"></i>
        </button>
      <% end %>
      <button id="criteria-btn" class="round-btn">
        <i class="fas fa-sliders-h"></i>
      </button>
    </div>
  </div>
</section>
<!-- Title -->

<!-- Search resume -->
<section id="search-resume">
  <div class="container">
    <div class="d-flex align-items-center">
      <h2 class="mr-4 mb-0">Votre recherche</h2>
      <span class="tag light-purple-tag mr-3"><%= @search.job_title.capitalize %></span>
      <span class="tag light-purple-tag mr-3"><%= @search.environment.capitalize %></span>
      <span class="tag light-purple-tag mr-3"><%= @search.city_type.capitalize %></span>
      <span class="tag light-purple-tag mr-3">Ville <%= @search.city_size %></span>
      <span class="tag light-purple-tag mr-3"><%= @search.home_type.capitalize %></span>
      <span class="tag light-purple-tag mr-3"><%= @search.home_category.upcase %></span>
      <span class="tag light-purple-tag mr-3"><%= @search.home_size %> m²</span>
      <span class="tag light-purple-tag mr-3"><%= @search.home_budget %> €</span>
    </div>
  </div>
</section>
<!-- Search resume -->

<!-- Criteria selection -->
<section id="criteria">
  <div class="container">
    <div class="d-flex align-items-center">
      <h2 class="mr-4 mb-0">Critères</h2>
      <button class="btn btn-primary mr-2 criterion">Emploi</button>
      <button class="btn btn-primary mr-2 criterion">Logement</button>
      <button class="btn btn-outline-primary mr-2 criterion">Tourisme</button>
      <button class="btn btn-outline-primary mr-2 criterion">Internet</button>
      <button class="btn btn-primary mr-2 criterion">Météo</button>
    </div>
  </div>
</section>
<!-- Criteria selection -->

<!--Cities comparison -->
<section class="container my-5">

  <div class="results">
    <%= render partial: "shared/city_region_name", collection: @cities, as: :item %>
  </div>
  <!--City img -->
  <div class="results">
    <%= render partial: "shared/city_card", collection: @cities, as: :item %>
  </div>
  <!--City img -->

  <!--City description -->
  <div class="results mb-3">
    <%= render partial: "shared/city_description", collection: @cities, as: :item, locals: { search: @search} %>  
  </div>
  <!--City description -->

  <!-- Job criterion -->
  <div id="emploi-criterion" class="criterion-line show">
    <hr>
    <div class="results my-3">
      <%= render partial: "shared/city_job_criterion", collection: @cities, as: :item %>  
    </div>
  </div>
  <!-- Job criterion -->

  <!-- Home criterion -->
  <div id="logement-criterion" class="criterion-line show">
    <hr>
    <div class="results my-3">
      <%= render partial: "shared/city_home_criterion", collection: @cities, as: :item, locals: { search: @search} %>  
    </div>
  </div>
  <!-- Home criterion -->

  <!-- Tourism criterion -->
  <div id="tourisme-criterion" class="criterion-line">
    <hr>
    <div class="results my-3">
      <%= render partial: "shared/city_tourism_criterion", collection: @cities, as: :item %>  
    </div>
  </div>
  <!-- Tourism criterion -->

  <!-- Internet criterion -->
  <div id="internet-criterion" class="criterion-line">
    <hr>
    <div class="results my-3">
      <%= render partial: "shared/city_internet_criterion", collection: @cities, as: :item %>  
    </div>
  </div>
  <!-- Internet criterion -->

  <!-- Weather criterion -->
  <div id="météo-criterion" class="criterion-line show">
    <hr>
    <div class="results mt-3">
      <%= render partial: "shared/city_weather_criterion", collection: @cities, as: :item %>  
    </div>
  </div>
  <!-- Weather criterion -->

  <!-- City link -->
  <div class="results">
    <%= render partial: "shared/city_link", collection: @cities, as: :item %>  
  </div>
  <!-- City link -->

</section>
<!--Cities comparison -->
