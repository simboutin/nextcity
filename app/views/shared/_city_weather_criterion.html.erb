<div class="criterion<%= " best" if defined?(best) && best == item %>">
  <div class="mr-3">
    <i class="fas fa-cloud-sun"></i>
  </div>
  <div>
    <% if item.rain_days %>
      <span class="criterion-number"><%= item.rain_days.round %></span> jours de pluie<br>
    <% end %>
    <% if item.sun_hours %>
      <span class="criterion-number"><%= number_with_delimiter(item.sun_hours, delimiter: " ") %></span> heures de soleil
    <% end %>
  </div>
</div>
