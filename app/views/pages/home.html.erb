<!-- Banner -->
<%= render 'banner' %>
<!-- Banner -->

<!-- Step Cards: Comment ça marche ? -->
<section class="py-5" id="steps">
  <div class="container">

    <h2 class="mb-4">Comment ça marche ?</h2>
    <div class="cards">

      <div class="default-card step-card">
        <div class="step-card-number">
          <span>1</span>
        </div>
        <h4 class="step-card-title">Racontez-nous</h4>
        <div class="step-card-desc">Décrivez-nous vos envies (emploi, logement...) afin de vous proposer une sélection de villes personnalisée.</div>
        <%= image_tag 'step1.svg', class: 'step-card-img' %>
      </div>

      <div class="default-card step-card">
        <div class="step-card-number">
          <span>2</span>
        </div>
        <h4 class="step-card-title">Choisissez</h4>
        <div class="step-card-desc">Affinez votre recherche selon de nombreux critères et sélectionnez la ville qui vous plaît.</div>
        <%= image_tag 'step2.svg', class: 'step-card-img' %>
      </div>

      <div class="default-card step-card">
        <div class="step-card-number">
          <span>3</span>
        </div>
        <h4 class="step-card-title">Suivez le guide</h4>
        <div class="step-card-desc">Avancez étape par étape et discutez avec nos ambassadeurs pour concrétiser votre départ vers votre futur lieu de vie.</div>
        <%= image_tag 'step3.svg', class: 'step-card-img' %>
      </div>
    </div>

  </div>
</section>
<!-- Step Cards: Comment ça marche ? -->

<!-- City Cards -->
<section class="my-5">
  <div class="container">

    <div>
      <h2 class="mb-3">Découvrez...</h2>
      <div class="cards">
        <%= render partial: "shared/city_card", collection: @cities, as: :item %>
      </div>
    </div>

  </div>
</section>
<!-- City Cards -->
